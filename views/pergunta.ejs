<%- include ('./partials/header.ejs') %>
<body>
    <%- include ('./partials/navbar.ejs') %>
    <div class="container">
        <hr>
        <h1><%- pergunta.titulo%></h1>
        <p><%- pergunta.descricao%></p>
        <hr>
        <form method="post" action="/responder">
            <label for="corpo">Resposta:</label>
            <textarea class="form-control" name="corpo" id="corpo" placeholder="Escreva a sua resposta!"></textarea><br>
            <input type="hidden" name="perguntaId" id="perguntaId" value="<%= pergunta.id %>">
            <button class="btn btn-success">Responder</button>
        </form>
        <hr>
        <h2>Respostas</h2>
        <% respostas.forEach(respostas => {%>
            <br>
            <div class="card">
                <div class="card-body">
                    <p><%= respostas.corpo %></p>
                </div>
            </div>
        <% }) %>
    </div>
    
</body>
<%- include ('./partials/footer.ejs') %>