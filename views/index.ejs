<%- include ('./partials/header.ejs') %>
<body>
    <%- include ('./partials/navbar.ejs') %>
    <div class="container">
        <br>
        <h1>Perguntas</h1>
        <hr>
        <a href="/perguntar" class="btn btn-dark">Perguntar</a>
        <hr>
        <% perguntas.forEach((perguntas) => { %>
        <br>
        <div class="card">
            <div class="card-body">
                <h3><%= perguntas.titulo%></h3>
            </div>
            <div class="card-footer">
                <a class="btn btn-success" href="/pergunta/<%- perguntas.id %>">Responder</a>
            </div>
        </div>
        <% }) %>
    </div>
    
</body>
<%- include ('./partials/footer.ejs') %>